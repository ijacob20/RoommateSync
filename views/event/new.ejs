<%- include('../partials/header.ejs')%>
<main>
    <div id="forms">
        <form action = '/events' enctype="multipart/form-data" method='POST' class="new-form">
        <label for="category">Category</label>
        <select name="category" required>
         <option value="">--Select a Category--</option>
         <option value="Solo">Solo</option>
         <option value="Duo">Duo</option>
         <option value="Trio">Trio</option>
         <option value="Quads">Quads</option>
         <option value="Other">Other</option>
        </select>
            <div class="formDiv">
                <label for="title">Title</label>
                <input type="text" id="title" name="title" placeholder="title" required>
            </div>
    
            <div class="formDiv">
                <label for="details">Details</label>
                <input type="text" name="details" id="details" placeholder="description" required>
            </div>
                
            <div class="formDiv">
                <label for="location">Where</label>
                <input type="text" id="location" name="location" placeholder="location" required>
            </div>
            <div class="formDiv">
                <label for="startDate">Start</label>
                <input type="datetime-local" id="startDate" name="startDateTime" required>
    
            </div>
            <div class="formDiv">
                <label for="endDate">End</label>
                <input type="datetime-local" id="endDate" name="endDateTime" required>
    
            </div>
            <!-- <form action="/" enctype="multipart/form-data" method="POST"> -->
                <div class="formDiv">
            <label for="image">Select image:</label>
            <input type="file" id="image" name="image" accept="image/*" required>
        </div class="formDiv">
             <br>
             <div>
                <input type="submit" value="Submit">
            </div>
        </form>

    </div>

    </main>

    <%- include('../partials/footer.ejs')%>