  <body>
    <div class="roommate">
        <h1>Welcome back, <%-user.firstName %>!</h1>

          <div class="roommate-img">
              <a href="/"><img id="logo" src="/images/roommate-sync-logo.png" alt=""></a>

              </div>




              <div class="chat-container">
                <div class="chat-header">
                    <h2>Chat Window</h2>
                </div>
                <div class="chat-messages">
                    <div class="message">
                        <div class="message-sender"><%-user.firstName %></div>
                        <div class="message-text">Hello!</div>
                    </div>
                    <!-- More messages will go here -->
                </div>
                <form class="message-form" id="message-form">
                    <div class="chat-input">
                    <input type="text" id="msg"placeholder="Type your message..." name="text">
                    <button>Send</button>
                </div>
            </form>
            </div>


